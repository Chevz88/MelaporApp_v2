<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgApp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="20dp"
        android:elevation="4dp">

        <!-- Nama user login -->
        <TextView
            android:id="@+id/textNamaUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login sebagai: -"
            android:textStyle="bold"
            android:textColor="@color/primaryDark"
            android:layout_marginBottom="16dp" />

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Pelapor"
            android:textColor="@color/primaryDark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Input Nama -->
        <EditText
            android:id="@+id/editNama"
            style="@style/EditInput"
            android:hint="Nama Lengkap" />

        <!-- Input Jabatan -->
        <EditText
            android:id="@+id/editJabatan"
            style="@style/EditInput"
            android:hint="Jabatan" />

        <!-- Input Perusahaan -->
        <EditText
            android:id="@+id/editPerusahaan"
            style="@style/EditInput"
            android:hint="Perusahaan" />

        <!-- Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Pengaduan"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textColor="@color/primaryDark" />

        <!-- Spinner Jenis -->
        <Spinner
            android:id="@+id/spinnerJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_spinner" />

        <!-- Kronologi -->
        <EditText
            android:id="@+id/editKronologi"
            style="@style/EditInput"
            android:hint="Kronologi Lengkap"
            android:minLines="4"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Tombol pilih file -->
        <Button
            android:id="@+id/btnPilihFile"
            style="@style/PrimaryButton"
            android:text="PILIH FOTO / BUKTI" />

        <!-- Teks file yang dipilih -->
        <TextView
            android:id="@+id/textFileDipilih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File dipilih: -"
            android:textColor="@color/textHint"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Tombol kirim -->
        <Button
            android:id="@+id/btnKirim"
            style="@style/PrimaryButton"
            android:text="KIRIM LAPORAN" />
    </LinearLayout>
</ScrollView>
