<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nama user login -->
        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login sebagai: -"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Input Nama -->
        <EditText
            android:id="@+id/editNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pelapor" />

        <!-- Input Jabatan -->
        <EditText
            android:id="@+id/editJabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jabatan"
            android:layout_marginTop="12dp" />

        <!-- Input Perusahaan -->
        <EditText
            android:id="@+id/editPerusahaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Perusahaan"
            android:layout_marginTop="12dp" />

        <!-- Spinner Jenis -->
        <Spinner
            android:id="@+id/spinnerJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <!-- Kronologi -->
        <EditText
            android:id="@+id/editKronologi"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Kronologi"
            android:gravity="top|start"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:inputType="textMultiLine" />

        <!-- Tombol pilih file -->
        <Button
            android:id="@+id/btnPilihFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PILIH FOTO / BUKTI"
            android:layout_marginTop="16dp" />

        <!-- Teks file yang dipilih -->
        <TextView
            android:id="@+id/textFileDipilih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File dipilih: -"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- Tombol kirim -->
        <Button
            android:id="@+id/btnKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KIRIM LAPORAN"
            android:layout_marginTop="24dp"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
